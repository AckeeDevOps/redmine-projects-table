<table class="list projects">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% projects.each do |project| %>
      <tr class="<%= cycle('odd', 'even') %> project">
        <td class="name">
          <span>
            <%= link_to_project(project, {}, :class => "#{project.css_classes} #{User.current.member_of?(project) ? 'my-project' : nil}") %>
          </span>
        </td>
        <td><p class="someclass"><%= project.description %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'projects', :plugin => 'projects_table' %>
<% end %>